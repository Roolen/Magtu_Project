                   Margin="205,27,0,0" VerticalAlignment="Top"
                   Width="78" RenderTransformOrigin="0.5,0.5"
                   RadiusY="12" RadiusX="12">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-47.997"/>
