                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="#144046" Offset="1"/>
                    <GradientStop Color="#3E6694" Offset="0"/>
