<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:controls="clr-namespace:UI.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1280" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True">
    <Grid>
        <Rectangle Grid.RowSpan="1" Fill="#00F4F4F5" MouseLeftButtonDown="DragPlace_MouseLeftButtonDown" Grid.ColumnSpan="2"/>

        <controls:NavigationPanel Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Right"
                                  VerticalAlignment="Stretch" Width="300" Height="800"/>
    </Grid>
</Window>
